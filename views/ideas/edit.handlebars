
{{#if errors}}
     {{#each errors}}
          <div class="alert alert-danger">{{this.msg}}</div>
     {{/each}}
{{/if}}


<div  class="card card-body">

   <h3> Eidt Bussiness Idea</h3>


   <form action="/ideas/{{idea.id}}?_method=PUT" method="post">
   <input type="hidden" name="_method" value="PUT">
   <div class="form-group">
       <label for="title" >Title</label>
       <input type="text" name="title" class="form-control" value="{{idea.title}}">
   </div>
   <div class="form-group">
       <label for="details" >Details</label>
       <textarea name="details" class="form-control">{{idea.details}}</textarea>
      
   </div>
   
   <button type="submit" class="btn btn-primary"> Update</button>
   
   </form>
</div>